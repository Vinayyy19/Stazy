    <div class="mt-3" id="searchFilterContainer">
      <button id="searchFilterBtn"
              class="btn btn-outline-danger"
              type="button"
              onclick="showSearchFilter()">
        Search / Filter
      </button>

      <form id="searchFilterForm"
            class="row g-2 align-items-center d-none"
            action="/search"
            method="GET">

        <div class="col-auto position-relative">
          <input type="text"
                name="location"
                id="locationInput"
                class="form-control pe-5"
                placeholder="Location">
          <span id="clearSearch"
                class="position-absolute top-50 end-0 translate-middle-y me-3"
                style="cursor:pointer;font-size:1.2rem;">&times;</span>
        </div>

        <div class="col-auto">
          <input type="number"
                name="minPrice"
                id="minPriceInput"
                class="form-control"
