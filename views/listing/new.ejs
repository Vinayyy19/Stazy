<% layout('layouts/boilerplate') %>
<body>
    <div class="new">
    <form method="POST" class="needs-validation" novalidate action="/new/listing" enctype="multipart/form-data">
    <h2>Create New Listing</h2> <br>

    <div class="title">
    <label for="title" class="form-label">Title:</label>
    <input type="text" class="form-control" id="title" name="title" required> 
    <div class="invalid-feedback">
        Please Give Valid Title!
      </div>
    </div>
    
   <div class="description">
    <label for="description" class="form-label">Description:</label>
    <textarea id="description" class="form-control" name="description" required></textarea>
    <div class="invalid-feedback">
        Please Give Valid Description!
      </div>
   </div>
    
    <div class="img">
    <label for="image" class="form-label">Upload Image</label>
    <input type="file" class="form-control" id="image" name="image" required>
    <div class="invalid-feedback">
      Please Upload Listing Image
    </div>
  </div>
    
    <div class="price">
    <label for="price" class="form-label">Price:</label>
    <input type="number" class="form-control" id="price" name="price" required> 
    <div class="invalid-feedback">
        Please Enter Valid Price!
      </div>
    </div>
    
    <div class="location">
    <label for="location" class="form-label">Location:</label>
    <input type="text" class="form-control" id="location" name="location" required>
    <div class="invalid-feedback">
        Please Enter Valid Location Name!
      </div>
    </div>
    
    <div class="country">
    <label for="country" class="form-label">Country:</label>
    <input type="text" class="form-control" id="country" name="country" required>
    <div class="invalid-feedback">
        Please Enter Valid Country Name !
      </div>
    </div>

    <button class="middle">submit</button>
    </form>
    </div>
</body>